{{#aurorafooter.enabled}}
<footer id="aurora-footer">
  <style>
    #aurora-footer {
      --panel: #121216;
      --text: #e5e7eb;
      --muted: #9ca3af;
      --accent: #38bdf8;
      --border: rgba(255, 255, 255, 0.08);
      width: 100%;
      background:
        radial-gradient(1200px 400px at 50% -200px, rgba(56, 189, 248, 0.08), transparent 60%),
        linear-gradient(180deg, #0b0b0d 0%, #09090b 100%);
      color: var(--text);
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Arial, sans-serif;
      box-sizing: border-box;
    }

    #aurora-footer *,
    #aurora-footer *::before,
    #aurora-footer *::after {
      box-sizing: inherit;
    }

    #aurora-footer::before {
      content: "";
      display: block;
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(56, 189, 248, 0.35), transparent);
    }

    #aurora-footer a {
      color: var(--text);
      text-decoration: none;
      transition: color .2s ease;
    }

    #aurora-footer a:hover {
      color: var(--accent);
    }

    #aurora-footer .af-container {
      max-width: 1280px;
      margin: 0 auto;
      padding: 56px 24px 32px;
      width: 100%;
    }

    #aurora-footer .af-grid {
      display: grid;
      grid-template-columns: 1.2fr 1fr 1fr;
      gap: 32px;
    }

    @media (max-width: 900px) {
      #aurora-footer .af-grid {
        grid-template-columns: 1fr;
      }
    }

    #aurora-footer .af-brand {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    #aurora-footer .af-logo {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    #aurora-footer .af-logo img {
      width: auto;
      height: 34px;
      object-fit: contain;
      display: block;
      max-width: none;
    }

    #aurora-footer .af-desc {
      color: var(--muted);
      line-height: 1.6;
      max-width: 420px;
    }

    #aurora-footer .af-section h4 {
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 14px;
      color: #f9fafb;
      letter-spacing: 0.4px;
    }

    #aurora-footer .af-list {
      display: flex;
      flex-direction: column;
      gap: 10px;
      font-size: 14px;
      color: var(--muted);
    }

    #aurora-footer .af-contact-item {
      display: inline-flex;
      align-items: flex-start;
      gap: 8px;
    }

    #aurora-footer .af-contact-item i {
      opacity: .8;
      margin-top: 2px;
    }

    #aurora-footer .af-list a {
      color: var(--muted);
    }

    #aurora-footer .af-list a:hover {
      color: var(--accent);
      text-decoration: underline;
    }

    #aurora-footer .af-bottom {
      margin-top: 40px;
      padding-top: 18px;
      border-top: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 12px;
      font-size: 13px;
      color: var(--muted);
    }
  </style>

  <div class="af-container">
    <div class="af-grid">
      <div class="af-brand">
        <div class="af-logo">
          {{#aurorafooter.logo}}
            <img src="{{{ aurorafooter.logo }}}" alt="{{{ aurorafooter.brandtitle }}}">
          {{/aurorafooter.logo}}
        </div>
        {{#aurorafooter.description}}
          <div class="af-desc">{{{ aurorafooter.description }}}</div>
        {{/aurorafooter.description}}
      </div>

      <div class="af-section">
        <h4>{{{ aurorafooter.contacttitle }}}</h4>
        <div class="af-list">
          {{#aurorafooter.hascontactitems}}
            {{#aurorafooter.contactitems}}
              <span class="af-contact-item">
                <i class="icon fa fa-{{ icon }} fa-fw" aria-hidden="true"></i>
                {{#hasurl}}<a href="{{{ url }}}">{{{ label }}}</a>{{/hasurl}}
                {{^hasurl}}<span>{{{ label }}}</span>{{/hasurl}}
              </span>
            {{/aurorafooter.contactitems}}
          {{/aurorafooter.hascontactitems}}
        </div>
      </div>

      <div class="af-section">
        <h4>{{{ aurorafooter.navtitle }}}</h4>
        <div class="af-list">
          {{#aurorafooter.hasnavlinks}}
            {{#aurorafooter.navlinks}}
              <a href="{{{ url }}}">{{{ text }}}</a>
            {{/aurorafooter.navlinks}}
          {{/aurorafooter.hasnavlinks}}
        </div>
      </div>
    </div>

    <div class="af-bottom">
      <span>{{{ aurorafooter.copyright }}}</span>
      {{#aurorafooter.bottomright}}
        <span>{{{ aurorafooter.bottomright }}}</span>
      {{/aurorafooter.bottomright}}
    </div>
  </div>
</footer>
{{/aurorafooter.enabled}}
