{{!
    @template block_myoverview/view-list

    This template renders the list view for the myoverview block.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "coursecategory": "Category 1",
                "visible": true
            }
        ]
    }
}}

<ul class="aurora-myoverview-list" data-region="card-deck" role="list">
    {{#courses}}
        <li class="aurora-myoverview-listitem"
            data-region="course-content"
            data-course-id="{{{id}}}">
            <div class="aurora-myoverview-listcard">
                <a href="{{viewurl}}"
                   class="aurora-myoverview-listmedia{{^courseimage}} is-no-media{{/courseimage}}">
                    {{#courseimage}}
                    <img src="{{courseimage}}"
                         alt="{{#str}}courseimage, core{{/str}}"
                         loading="lazy"
                         decoding="async">
                    {{/courseimage}}
                    <span class="visually-hidden">{{fullname}}</span>
                    {{^visible}}
                        <span class="aurora-myoverview-hidden">
                            <i class="bi bi-eye-slash me-1"></i>Hidden
                        </span>
                    {{/visible}}
                </a>

                <div class="aurora-myoverview-listbody">
                    {{#showshortname}}
                        <div class="aurora-myoverview-shortname">{{{shortname}}}</div>
                    {{/showshortname}}

                    <h3 class="aurora-myoverview-listtitle">
                        <a href="{{viewurl}}" class="aurora-myoverview-listlink">
                            {{> core_course/favouriteicon }}
                            {{{fullname}}}
                        </a>
                    </h3>

                    {{#showcoursecategory}}
                        <div class="aurora-myoverview-listcategory">
                            <i class="bi bi-folder me-1"></i>
                            <span class="categoryname">{{{coursecategory}}}</span>
                        </div>
                    {{/showcoursecategory}}

                    {{#hasprogress}}
                        <div class="aurora-myoverview-listprogress">
                            {{> block_myoverview/progress-bar}}
                        </div>
                    {{/hasprogress}}
                </div>

                <div class="aurora-myoverview-listactions">
                    {{> block_myoverview/course-action-menu }}
                </div>
            </div>
        </li>
    {{/courses}}
</ul>
