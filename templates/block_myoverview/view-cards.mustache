{{!
    @template block_myoverview/view-cards
    
    Modern Dashboard Course Cards for Moodle 5.1+
    - Bootstrap 5.3 compatible styling
    - Enhanced accessibility features
    - Optimized for responsive layouts
}}

<div class="aurora-myoverview-grid" data-region="card-deck" role="list">
    {{#courses}}
    <div class="aurora-myoverview-item" role="listitem" data-region="course-content" data-course-id="{{id}}">
        <article class="aurora-myoverview-card" tabindex="0"
                 aria-labelledby="course-title-{{id}}" aria-describedby="course-info-{{id}}">
            <div class="aurora-myoverview-media">
                {{#courseimage}}
                <img src="{{courseimage}}"
                     alt="{{#str}}courseimage, core{{/str}}"
                     loading="lazy"
                     decoding="async">
                {{/courseimage}}
            </div>
            <div class="aurora-myoverview-overlay"></div>

            <div class="aurora-myoverview-info" id="course-info-{{id}}">
                <h3 class="aurora-myoverview-title" id="course-title-{{id}}">
                    <a href="{{viewurl}}" class="stretched-link aurora-myoverview-link">
                        {{{fullname}}}
                    </a>
                </h3>

                {{#hasprogress}}
                <div class="aurora-myoverview-progress" role="progressbar"
                     aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100"
                     aria-label="{{progress}}% complete">
                    <div class="aurora-myoverview-progress-bar" style="width: {{progress}}%;"></div>
                </div>
                <small class="aurora-myoverview-meta">{{progress}}%</small>
                {{/hasprogress}}

                {{^hasprogress}}
                {{#showshortname}}
                <small class="aurora-myoverview-meta">{{shortname}}</small>
                {{/showshortname}}
                {{/hasprogress}}
            </div>

            {{#isfavourite}}
            <div class="aurora-myoverview-fav"
                 aria-label="{{#str}}markedasfavorite, core{{/str}}"
                 role="status">
                <svg class="bi" width="16" height="16" fill="currentColor">
                    <use xlink:href="#star-fill"/>
                </svg>
            </div>
            {{/isfavourite}}
        </article>
    </div>
    {{/courses}}
    
    {{^courses}}
    <div class="col-12">
        <div class="alert alert-light text-center rounded-4 p-5 border" role="status">
            <div class="mb-3">
                <svg class="bi text-muted" width="48" height="48" fill="currentColor">
                    <use xlink:href="#book-half"/>
                </svg>
            </div>
            <p class="mb-0 text-muted">
                {{#str}}nocourses, core{{/str}}
            </p>
        </div>
    </div>
    {{/courses}}
</div>

