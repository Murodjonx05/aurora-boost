{{!
    @template block_myoverview/view-summary

    This template renders the list view for the myoverview block.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "summary": "This course is about assignments",
                "hasprogress": true,
                "progress": 10,
                "coursecategory": "Category 1",
                "visible": true
            }
        ]
    }
}}
<div class="aurora-summary-grid" role="list">
{{#courses}}
    <article class="aurora-summary-card"
             role="listitem"
             data-region="course-content"
             data-course-id="{{{id}}}"
             itemscope itemtype="http://schema.org/Course">
        
        <div class="aurora-summary-layout">
            <a href="{{viewurl}}" class="aurora-summary-media{{^courseimage}} is-no-media{{/courseimage}}" tabindex="-1">
                {{#courseimage}}
                <img src="{{courseimage}}"
                     alt="{{#str}}courseimage, core{{/str}}"
                     loading="lazy"
                     decoding="async"
                     itemprop="image">
                {{/courseimage}}
                <span class="visually-hidden">{{fullname}}</span>
            </a>

            <div class="aurora-summary-body">
                <div class="aurora-summary-head">
                    <div class="aurora-summary-titlewrap">
                        <h3 class="aurora-summary-title">
                            <a href="{{viewurl}}" class="aurora-summary-link" itemprop="name">
                                {{> core_course/favouriteicon }}
                                {{{fullname}}}
                            </a>
                        </h3>

                        {{#showshortname}}
                        <div class="aurora-summary-code"
                             aria-label="{{#str}}aria:courseshortname, core_course{{/str}}">
                            <code>{{{shortname}}}</code>
                        </div>
                        {{/showshortname}}
                    </div>

                    <div class="aurora-summary-actions">
                        {{> block_myoverview/course-action-menu }}
                    </div>
                </div>

                <div class="aurora-summary-meta">
                    {{#showcoursecategory}}
                    {{#coursecategory}}
                    <span class="aurora-summary-badge" aria-label="{{#str}}aria:coursecategory, core_course{{/str}}" itemprop="provider">
                        {{{coursecategory}}}
                    </span>
                    {{/coursecategory}}
                    {{/showcoursecategory}}

                    {{^visible}}
                    <span class="aurora-summary-badge is-warning" title="{{#str}} hiddenfromstudents {{/str}}">
                        <i class="fa fa-eye-slash me-1" aria-hidden="true"></i>
                        {{#str}} hiddenfromstudents {{/str}}
                    </span>
                    {{/visible}}
                </div>

                <div class="aurora-summary-text"
                     aria-label="{{#str}}aria:coursesummary, block_myoverview{{/str}}"
                     itemprop="description">
                    <p>{{{summary}}}</p>
                </div>

                {{#hasprogress}}
                <div class="aurora-summary-progress">
                    <div class="aurora-summary-progress-head">
                        <span class="aurora-summary-progress-label">{{#str}} progress {{/str}}</span>
                        <span class="aurora-summary-progress-value">{{progress}}%</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-primary"
                             role="progressbar"
                             style="width: {{progress}}%"
                             aria-valuenow="{{progress}}"
                             aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>
                </div>
                {{/hasprogress}}
            </div>
        </div>
    </article>
{{/courses}}
</div>
